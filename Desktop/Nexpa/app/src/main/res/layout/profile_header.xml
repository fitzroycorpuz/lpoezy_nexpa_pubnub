<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/white_smoke"
    tools:context=".MainActivity">



        <FrameLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            >

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_avatar"
                app:siBorderColor="@color/silver"
                android:layout_gravity="center"
                app:siBorderWidth="3dp" />

        </FrameLayout>

        <LinearLayout

            android:layout_marginLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|right"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_edit_profile"/>

            </LinearLayout>



            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michelle Collins"
                android:textSize="24sp" />
                 />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="\@realmichellecollins"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:linksClickable="true"
                android:text="Australian Gal working as a marketing coordinator.Loves taking pics on the go &amp; sharing them everwhere!"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_url0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="www.url.com"
                    android:textSize="12sp"
                     />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text=" | "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                     />

                <TextView
                    android:id="@+id/tv_url1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="www.url.com"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_smoke"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="16dp">

        </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_smoke"></TextView>

</LinearLayout>
