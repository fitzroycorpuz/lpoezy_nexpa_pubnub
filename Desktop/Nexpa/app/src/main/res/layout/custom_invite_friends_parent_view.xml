<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/standard_material_padding">

    <TextView android:id="@+id/tv_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Facebook"
        android:textColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/standard_text_size"/>

    <ImageView
        android:id="@+id/arrow_expand_imageview"
        android:layout_width="@dimen/list_item_parent_arrow_size"
        android:layout_height="@dimen/list_item_parent_arrow_size"
        android:layout_marginRight="@dimen/margin_medium"
       android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/selector_arrow_down"
        android:contentDescription="@string/arrow_contentDescription"/>

</RelativeLayout>
